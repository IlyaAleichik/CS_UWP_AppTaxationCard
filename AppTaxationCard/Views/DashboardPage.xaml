    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:local="using:AppTaxationCard.Views"
    mc:Ignorable="d">
    
    <Page.DataContext>
        <vm:DashboardPageViewModel />
    </Page.DataContext>

    <Page.Resources>
        <local:DateTimeOffsetToStringConverter x:Key="myDateConverter" />
    </Page.Resources>


